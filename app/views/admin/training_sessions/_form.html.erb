  <%= f.input :started_at, as: :string, label: "Quand ?", input_html: {class: "datetimepicker"}, input_html: {value: I18n.localize(f.object.started_at, format: :datetimepicker)}  %>

  <%= f.association :location, collection: Location.all.order("name ASC"), label: "OÃ¹ ?", include_blank: false %>

  <%= f.association :groups, collection: Group.all.order("name ASC"), wrapper: :horizontal_radio_and_checkboxes, as: :check_boxes, label: "Qui ?", required: true %>

