<%= simple_form_for([:admin, @location], wrapper: :horizontal_form, html: {class: 'form-horizontal'} ) do |f| %>

  <%= f.input :name, autofocus: true, label: "Lieu" %>

  <div class="form-group" style="margin-top: 40px;">
    <div class="col-sm-offset-3 col-sm-7">
      <%= f.button :submit, value: submit_value, class: "btn btn-primary" %>
      <%= link_to "Annuler", admin_locations_path, class: "btn btn-sm btn-default col-sm-offset-1" %>
    </div>
  </div>

<% end %>
